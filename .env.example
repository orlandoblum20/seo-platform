APP_NAME="SEO Landing Platform"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Europe/Moscow
APP_URL=http://localhost:8080
APP_PORT=8080
ASSET_URL=/

# Locale
APP_LOCALE=ru
APP_FALLBACK_LOCALE=en

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Database (use 'db' for Docker)
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=seo_platform
DB_USERNAME=seo_user
DB_PASSWORD=secret

# Redis (use 'redis' for Docker)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Session
CACHE_STORE=redis
CACHE_PREFIX=seo_platform
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=redis

# Mail (optional)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# ============================================
# SEO Platform Settings
# ============================================

# AI API Keys (configure in admin panel)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Default AI Provider (openai or anthropic)
AI_DEFAULT_PROVIDER=openai

# Keitaro TDS
KEITARO_API_URL=
KEITARO_API_KEY=

# Analytics
YANDEX_METRIKA_ID=
GOOGLE_ANALYTICS_ID=

# Site Generation
SITES_STORAGE_PATH=storage/app/sites
SITES_DEPLOY_METHOD=local
